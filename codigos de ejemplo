//condicion while
var x=0; 
while(x<6) 
{ 
alert("El valor de x es= "+x); 
x=x+1; 
} 

//break y continue
var salida=""; 
for (x=5;x<15;x++) 
 { 
 if (x==8) break; 
 salida=salida+x+" \n"; 
 } 
salida=salida+"\n\n"; 
for (x=5;x<15;x++) 
 { 
 if (x==8) continue; 
 salida=salida+x+"\t"; 
 } 
alert(salida); 


